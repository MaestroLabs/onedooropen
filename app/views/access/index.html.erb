<% @page_title = "OneDoorOpen" %>
<!doctype html>
<html>
<head>
<!-- <meta charset="utf-8"> -->

<title>OneDoorOpen</title>
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<!--Google Webfont-->
<link href='http://fonts.googleapis.com/css?family=Lato:300,400,900,400italic' rel='stylesheet' type='text/css'>
<!-- <link href="_css/style.css" rel="stylesheet" type="text/css"> -->

</head>

<body>

<div class="container-fluid">
<!--Nav-->
<div class="navbar">
	<div class="navbar-inner">
    	<%= link_to image_tag("logo-small.png",:alt => "OneDoorOpen"), {:action => 'index', :controller => 'access'}, {:class => 'brand'}%>
    </div>
</div>


<!--Start table-->
<!-- bootstrap stuff -->	
	<div class="row-fluid" style="margin-top:5%">
	<div class="span2 offset2">
        <h1>hi there</h1><br>
        
        <!-- <input type="text" placeholder="email"><br>
        <input type="text" placeholder="password"><br>
        <button class="btn">Log in</button> &nbsp;
        <button class="btn">Sign up</button> -->        
        
        <%= form_tag(:action => 'attempt_login') do %>
		<%= text_field_tag :email,nil,:placeholder => "email" %>
		<br>
		<%= password_field_tag :password,nil,:placeholder => "password" %>
		<br>
		<%= submit_tag "Log In", :class => "btn" %>
		<%= link_to "Sign Up", {:action => 'register'}, {:class => "btn"} %> 
        <% end %>
        
    </div>
    <div class="span5 offset1">
    	<h1>this is what we're about</h1><br>
        <iframe width="560" height="315" src="http://www.youtube.com/embed/VtrPFVqT3Bg" frameborder="0" allowfullscreen></iframe>
    </div>
</div>
<!-- end bootstrap stuff -->


</body>

<!--Start footer-->
<footer>
Maestro Labs Â© 2013.
</footer>
</div>  <!-- end container-fluid -->
</html>


